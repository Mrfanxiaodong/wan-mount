</div>
<link rel="stylesheet" href="stylesheets/MEMORY.css">
<script src="javascripts/angular.min.js"></script>
<script>
    var app = angular.module('myApp',[])
    app.controller('myctrl',function($scope,$http){
        $http({
            url:'/w/',
        }).then(function(res){
                    $scope.t=res.data.data;
                },
                function(err){}
        )
        $http({
            url:'/w/',
            method:"POST",
        }).then(function(res){
                    $scope.tt=res.data.data;
                },
                function(err){}
        )

        $http({
            url:'/wt/',
        }).then(function(res){
                    $scope.zi=res.data.data;
                },
                function(err){}
        )
        $http({
            url:'/wt/',
            method:"POST",
        }).then(function(res){
                    $scope.zili=res.data.data;
                    console.log($scope.zili);
                },
                function(err){}
        )
    })
</script>

