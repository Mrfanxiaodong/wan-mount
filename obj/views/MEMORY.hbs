            <img src="images/i_59 (1).jpg" alt="" width="1000">
        </div>
    </div>
    <div class="footer">
        <div class="left">
            <img src="images/i_60 (1).jpg" alt="">
            <img src="images/i_61 (1).jpg" alt="">
        </div>
        <div class="right">
            <ul >
                <li ng-repeat="z in zili"><a href="\{{z.linkf}}">\{{z.zzz}}</a></li>
            </ul>
        </div>
