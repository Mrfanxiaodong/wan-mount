    <div class="fountc">
        <div class="contain">
            <img src="images/i_47 (1).jpg" alt="">
        </div>
    </div>
    <div class="con">
        <div class="header">
            <p>历史名人</p>
        </div>
        <div class="tuli" >
            <div class="top" style="text-align: center">
                <div ng-repeat="shu in t">
                    <a href="\{{shu.linkf}}"> <img ng-src="\{{shu.imgurl}}" alt="" class="iimg"></a>
                    <p>\{{shu.name}}</p>
                    <p>\{{shu.histime}}</p>
                </div>
            </div>
            <div class="bottom">
                <div class="left">
                    <div ng-repeat="sh in tt" style="text-align: center">
                        <a href="\{{sh.linkf}}"> <img ng-src="\{{sh.imgurl}}" alt="" class="iimg"></a>
                        <p>\{{sh.name}}</p>
                        <p>\{{sh.histime}}</p>
                    </div>
                </div>
                <div class="right">
                   <p>\{{zi[0].zi}}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="img">
        <img src="images/i_58.jpg" alt=""width="1000">
    </div>
    <div class="qitu">
